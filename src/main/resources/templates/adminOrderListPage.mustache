<!DOCTYPE HTML>
<head>
    <title>Getting Started: Serving Web Content</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
</head>


<body>
<div class="container mt-5">
    <a href="/admin">
        <button class='btn btn-primary'>Turn back</button>
    </a>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">TaxiStation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/cars">Car page</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/drivers">Driver page</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/user">User page</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/orders">Order page</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/cashier">Cashier page</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    {{#completed}}
        <div>Total completed orders: {{completed}}</div>
    {{/completed}}

    {{#cancelled}}
        <div>Total cancelled orders: {{cancelled}}</div>
    {{/cancelled}}

    <form method="post">
        <label>
            <select name="select" size="3" multiple>
                <option selected value="s1">Full Report</option>
                <option value="s2">Completed Orders</option>
                <option value="s3">Cancelled Orders</option>
            </select>
        </label>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}">
        <button class='btn btn-primary' type="submit">See Order List</button>
    </form>

    <a href="/admin/orders/deleteCancelled">
        <button class='btn btn-primary'>Delete Cancelled Orders</button>
    </a>
    <a href="/admin/orders/deleteAll">
        <button class='btn btn-primary'>Delete All Orders</button>
    </a>

    <div>List of all orders</div>
    <table>
        <thead>
        <tr>
            <th>OrderId</th>
            <th>CarId</th>
            <th>DriverId</th>
            <th>Amount of Passengers</th>
            <th>Distance</th>
            <th>Status</th>
            <th>UserId</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {{#orders}}
            <tr>
                <td>{{orderId}}</td>
                <td>{{carId}}</td>
                <td>{{driverId}}</td>
                <td>{{amountOfPassengers}}</td>
                <td>{{distance}}</td>
                <td>{{status}}</td>
                <td>{{clientId}}</td>
                <td><a href="/admin/orders/{{orderId}}">See more info</a></td>
            </tr>
        {{/orders}}
        </tbody>
    </table>
    {{#response}}
        {{response}}
    {{/response}}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
          integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
            integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"
            integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
            crossorigin="anonymous"></script>
</div>
</body>